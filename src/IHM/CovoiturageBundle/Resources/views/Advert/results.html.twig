{% extends "IHMCovoiturageBundle::layout.html.twig" %}

{% block title %}
  {{ 'advert.search'|trans }} - {{ parent() }}
{% endblock %}

{% block ihmcovoit_body %}
  <h2>{{ 'advert.search'|trans }}</h2>
  <ul>
    {% for advert in listAdverts %}
      <li>
        <a href="{{ path('ihm_covoiturage_view', {'id': advert.id}) }}">
          {{ advert.title }}
        </a>
      </li>

    {% else %}
      <li>{{ 'advert.search.noresults'|trans }}</li>
    {% endfor %}

{% endblock %}